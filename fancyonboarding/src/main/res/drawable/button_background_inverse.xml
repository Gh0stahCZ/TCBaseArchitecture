<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false" android:state_checked="false">
    <shape android:shape="rectangle">
      <solid android:color="@color/button_background_inverse_normal"/>
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <solid android:color="@color/button_background_inverse_pressed"/>
    </shape>
  </item>

  <item android:state_checked="true">
    <shape android:shape="rectangle">
      <solid android:color="@color/button_background_inverse_checked"/>
    </shape>
  </item>

</selector>
