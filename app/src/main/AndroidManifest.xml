<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.tomaschlapek.tcbasearchitecture"
  >

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
    android:name=".App"
    android:allowBackup="false"
    android:supportsRtl="false"
    android:resizeableActivity="false"
    android:icon="@mipmap/ic_launcher"
    tools:replace="label"
    android:label="@string/app_name_mine"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:theme="@style/AppTheme">

    <!--<meta-data
      android:name="io.fabric.ApiKey"
      android:value="@string/fabric_api_key"
    />-->

    <meta-data
      android:name="com.google.android.geo.API_KEY"
      android:value="@string/google_places_api"/>

    <activity
      android:name=".presentation.ui.activity.base.KInitActivity"
      android:theme="@style/Theme.Transparent"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:name=".presentation.ui.activity.KSampleActivity"
      android:screenOrientation="portrait"
      android:exported="false"
      />

    <activity
      android:name=".presentation.ui.activity.KMapActivity"
      android:screenOrientation="portrait"
      android:exported="false"
      />

    <activity
      android:name=".presentation.ui.activity.KChatActivity"
      android:screenOrientation="portrait"
      android:exported="false"
      />

    <activity
      android:name=".presentation.ui.activity.KSettingsActivity"
      android:screenOrientation="portrait"
      android:exported="false"
      android:parentActivityName=".presentation.ui.activity.KChatActivity"
      >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".presentation.ui.activity.KChatActivity"/>
    </activity>

    <activity
      android:name=".presentation.ui.activity.KSignInActivity"
      android:screenOrientation="portrait"
      android:exported="false"
      />

    <service
      android:exported="false"
      android:name=".presentation.ui.service.KAutoUpdateJobService">
      <intent-filter>
        <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
      </intent-filter>
    </service>

  </application>

</manifest>