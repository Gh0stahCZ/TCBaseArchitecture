<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:id="@+id/item_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    >

    <ImageView
      android:id="@+id/message_pack_item_profile_picture"
      android:layout_width="@dimen/image_size"
      android:layout_height="@dimen/image_size"
      android:src="@drawable/ic_empty"
      />

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin_medium"
      >

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          style="@style/Text.Huge"
          android:id="@+id/message_pack_item_name"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          tools:text="Example name"/>

        <TextView
          style="@style/Text.Medium.Unimportant"
          android:id="@+id/message_pack_item_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin_small"
          tools:text="46m"
          />
      </LinearLayout>

      <TextView
        style="@style/Text.Large.Unimportant"
        android:id="@+id/message_pack_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Example message"
        />

    </LinearLayout>
  </LinearLayout>
</layout>