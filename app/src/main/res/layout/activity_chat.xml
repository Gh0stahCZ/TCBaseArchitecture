<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
>
  <RelativeLayout
    android:id="@+id/sample_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <Button
      android:id="@+id/sample_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_medium"
      android:text="@string/sample_button"
      android:layout_centerInParent="true"
    />

    <TextView
      android:id="@+id/sample_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="CHAT"
      android:layout_below="@id/sample_button"
      android:layout_centerHorizontal="true"
    />
      <!--app:autoSizeTextType="uniform"-->


    <include
      android:id="@+id/chat_control_panel"
      layout="@layout/layout_chat_control_panel"
      />

  </RelativeLayout>
</layout>