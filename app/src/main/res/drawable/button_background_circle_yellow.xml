<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_selected="false" android:state_pressed="false" android:state_checked="false">
    <shape android:shape="oval">
      <solid android:color="@color/button_background_circle_normal"/>
    </shape>
  </item>

  <item android:state_selected="false" android:state_pressed="true">
    <shape android:shape="oval">
      <solid android:color="@color/button_background_circle_pressed"/>
    </shape>
  </item>

  <item  android:state_selected="false" android:state_checked="true">
    <shape android:shape="oval">
      <solid android:color="@color/button_background_circle_checked"/>
    </shape>
  </item>

  <item  android:state_selected="true" android:state_pressed="false" android:state_checked="false">
    <shape android:shape="oval">
      <solid android:color="@color/button_background_circle_selected_normal"/>
    </shape>
  </item>

  <item android:state_selected="true" android:state_pressed="true">
    <shape android:shape="oval">
      <solid android:color="@color/button_background_circle_selected_pressed"/>
    </shape>
  </item>

  <item android:state_selected="true" android:state_checked="true">
    <shape android:shape="oval">
      <solid android:color="@color/button_background_circle_selected_checked"/>
    </shape>
  </item>

</selector>
