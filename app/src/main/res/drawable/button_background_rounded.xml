<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false" android:state_checked="false">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/button_round_corners"/>
      <solid android:color="@color/button_background_normal"/>
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/button_round_corners"/>
      <solid android:color="@color/button_background_pressed"/>
    </shape>
  </item>

  <item android:state_checked="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/button_round_corners"/>
      <solid android:color="@color/button_background_checked"/>
    </shape>
  </item>

</selector>
